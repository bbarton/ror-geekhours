<h3>Registration Form</h3>

<%= form_for @user do |f| %>

    <%= f.label :Name, 'Name' %>
    <%= f.text_field :name %><br />
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %><br />

    <%= link_to "Create Team", "javascript:void(0)", :class=>"createTeam" %>

    <div id="teamWrapper" style="display: none" class="clearfix">
      <div class="create-team-content">
          <%= f.label :team_name, 'Team Name' %>
          <%= f.text_field :team_name %><br />
        <ul class="team-content">
          <%= f.fields_for :secondary_users do |sf| %>

              <li>
              <div class="name-field">
                  <%= sf.label :name, 'Name',:class=>"control-label" %>
                  <%= sf.text_field :name %>
              </div>
              <div class="email-field">
                  <%= sf.label :email, 'Email',:class=>"control-label" %>
                  <%= sf.text_field :email %>
                <%= link_to "add","javascript:void(0)",:class=>"addUser" %>
              </div>

              </li>
          <% end %>
        </ul>
      </div>
    </div>
    <%= show_simple_captcha %>
    <%= f.submit "Submit",:class=>"btn btn-primary" %>

<% end %>

<%= content_for :head do  %>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".createTeam").live("click", function(){
                $("#teamWrapper").show();
            });
            $(".team-content li:first-child a").click(function(){
              $(".team-content li:nth-child(2)").show();
            });
            $(".team-content li:nth-child(2) a").click(function(){
                $(".team-content li:nth-child(3)").show();
            })
        });
    </script>
<%end%>

