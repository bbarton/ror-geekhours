                        <div class="regFormWrap">
                            <h3 class="sideBarHeading text-center"><span>Register for</span> <i class="icon-geekhour"></i> <span>@ Webonise</span></h3>
                            <%= form_for @user, :method => :post, :remote => true do |f| %>
                              <% if @user.errors.full_messages.any? %>
                                  <% @user.errors.full_messages.each do |error_message| %>
                                      <%= error_message if @user.errors.full_messages.first == error_message %>
                                  <% end %>
                              <% end %>
                                <div class="form-group">
                              <%= f.text_field :name, :placeholder=>"Name", :class=>"form-control customInput" %>
                                </div>
                                <div class="form-group">
                              <%= f.text_field :email, :placeholder=>"Email", :class=>"form-control customInput"  %>
                                </div>
                              <% index = 1%>
                              <%= f.fields_for :secondary_users do |sf| %>
                                <div class="form-group">
                                <%= sf.text_field :name, :placeholder=>"Name of Member #{index}", :class=>"form-control customInput" %>
                                <% index += 1  %>
                                </div>
                              <% end %>
                                <div class="form-group">
                              <%= f.text_area :description,:placeholder=>"Tell us about your idea for Geek Hours & your self...", :class=>"form-control customInput" %>

                                </div>
                                <div class="form-group btnSubmitWrap">
                              <%= f.submit "Register",:class=>"btn btnSubmit" %>
                                </div>
                            <% end %>
                        </div>
